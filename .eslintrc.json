{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "plugin:react/recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "import",
        "react-hooks"        
    ],
    "rules": {
        "import/order" : [
            "error",
            {
                "groups" : [
                    "builtin",
                    "external",
                    "internal",
                    "parent",
                    "sibling",
                    "index"
                ],

                "netlines-between" : "always",
                "alphabetize" : {
                    "order" : "asc",
                    "caseInsensitive" : true
                }                                
            }
        ],
        "import/first" : "error",
        "import/newline-after-import" : "error",
        "import/no-duplicates" : "error"        
    }
}
